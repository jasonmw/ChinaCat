@using ChinaCatSunflower.Models.Book
@model ChinaCatSunflower.Data.Models.Book

@await Html.PartialAsync("_BookForm", new AddBook())
<div id="book_details" hx-swap-oob="true">
    <div class="row tw-pb-3">
        <div class="col-3 tw-flex tw-justify-center"><img alt="@Model.title" src="@Model.image_url" style="max-height: 200px;" /></div>
        <div class="col">
            <ul class="list-group">
                <li class="list-group-item p-1">ISBN: @Model.isbn</li>
                <li class="list-group-item p-1">Title: @Model.title</li>
                <li class="list-group-item p-1">Author: @Model.author</li>
                <li class="list-group-item p-1">Published: @Model.published_date.ToShortDateString()</li>
                <li class="list-group-item p-1">Pages: @Model.page_count</li>
            </ul>
        </div>
    </div>
</div>