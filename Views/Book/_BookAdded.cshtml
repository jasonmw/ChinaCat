@using ChinaCatSunflower.Models.Book
@model ChinaCatSunflower.Data.Models.Book

@await Html.PartialAsync("_BookForm", new AddBook())
<div id="book_details" hx-swap-oob="true">
    <div class="row">
        <div class="col-3"><img src="@Model.image_url" style="max-width: 300px;" /></div>
        <div class="col">
            <ul class="list-group">
                <li class="list-group-item p-5">ISBN: @Model.isbn</li>
                <li class="list-group-item p-5">Title: @Model.title</li>
                <li class="list-group-item p-5">Author: @Model.author</li>
                <li class="list-group-item p-5">Published: @Model.published_date.ToShortDateString()</li>
                <li class="list-group-item p-5">Pages: @Model.page_count</li>
            </ul>
        </div>
    </div>
</div>